{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Plugin: Start (React watch)",
      "type": "npm",
      "script": "watch",
      "path": "wp-content/plugins/wp-ai-assistant/",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend: Dev (node --watch)",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use && npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "problemMatcher": []
    }
  ]
}
