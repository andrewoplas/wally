{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Serve",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use && npx nx serve backend",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "problemMatcher": []
    },
    {
      "label": "Frontend: Dev",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use && npx nx dev frontend",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "problemMatcher": []
    },
    {
      "label": "Plugin: Start",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use && npm run start & npm run watch:css",
      "options": {
        "cwd": "${workspaceFolder}/apps/wally"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev-servers"
      },
      "problemMatcher": []
    }
  ]
}
